<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MINI Whatsapp</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            min-height: 100vh;
        }

        h3 {
            color: #333;
        }

        .chat {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            margin: 20px 0;
            padding: 15px;
            width: 80%;
            max-width: 600px;
        }

        .chat p {
            margin: 5px 0;
        }

        .chat i {
            color: #007bff;
        }

        .msg {
            background-color: #e9ecef;
            border-radius: 5px;
            padding: 10px;
            margin: 10px 0;
        }

        .received {
            text-align: right;
        }

        hr {
            border: none;
            border-top: 1px solid #ddd;
            margin: 10px 0;
        }

        .received p {
            margin: 0;
            font-style: italic;
            color: #666;
        }
    </style>
</head>
<body>
    <h3>All Chats!</h3>
    <br><br>
    <form >
        <% for(let chat of chats) { %>
            <div class="chat">
                <p>From: <i><%= chat.from %></i></p>
                <div class="msg">
                    <p><%= chat.msg %></p>
                </div>
                <hr><hr>
                <div class="received">
                    <p>Received By: <%= chat.to %></p>
                </div>
                <hr><hr>
            </div>
        <% } %>
    </form>
</body>
</html>
